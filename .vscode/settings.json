{
  "files.exclude": {
    "**/node_modules": false,
    "**/*.config.js": false,
    "**/*config.json": false,
    "**/.*rc": false,
    "**/.*ignore": false,
    "**/dist": false,
    "packages/*/lib": false,
    ".editorconfig": false,
    ".env*": false,
    ".prettier*": false,
    ".vscode/": false,
    ".yarn-offline/": false,
    ".yarnrc.example": false,
    "commitlint.config.js": false,
    "coverage/": false,
    "degit.json": false,
    "lerna.json": false,
    "LICENSE": false,
    "yarn.lock": false
  },

  "npm.packageManager": "yarn",

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "cSpell.words": [
    "digimon"
  ]
}
